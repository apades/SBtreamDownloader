{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": [
      "es2020",
      "dom",
    ],
    "target": "es2017",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs"
  },
  "ts-node": {
    "transpileOnly": true,
  },
  "include": [
    "./**/*",
    "./global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "noImplicitAny": false
}